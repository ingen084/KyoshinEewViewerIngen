<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Styles.Resources>
		<FontFamily x:Key="IconFont">avares://KyoshinEewViewer.Core/Assets/Fonts/FontAwesome6Free-Solid-900.otf#Font Awesome 6 Free</FontFamily>
		<FontFamily x:Key="MainFont">avares://KyoshinEewViewer.Core/Assets/Fonts/NotoSansJP/#Noto Sans JP</FontFamily>
	</Styles.Resources>
	<Style Selector="TextBlock.icon">
		<Setter Property="FontFamily" Value="{StaticResource IconFont}" />
		<Setter Property="FontWeight" Value="Light" />
	</Style>
	<Style Selector="Run.icon">
		<Setter Property="FontFamily" Value="{StaticResource IconFont}" />
		<Setter Property="FontWeight" Value="Light" />
	</Style>
    <Style Selector="Window">
		<Setter Property="FontFamily" Value="{StaticResource MainFont}" />
		<Setter Property="FontWeight" Value="Regular" />
	</Style>
</Styles>
